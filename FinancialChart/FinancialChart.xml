<?xml version="1.0" encoding="UTF-8"?>
<Module>
    <ModulePrefs title="Rise Financial Chart Gadget" title_url="http://www.risevision.com/help/users/what-are-gadgets/premium-gadgets/rise-vision-financial-chart/">
